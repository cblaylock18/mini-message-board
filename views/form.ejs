<head>
    <link rel="stylesheet" href="/styles.css" />
</head>
<form method="POST" action="/new">
    <h1>Add a New Message!</h1>
    <label for="newMessage">Message</label>
    <input
        type="textarea"
        name="newMessage"
        id="newMessage"
        maxlength="100"
        minlength="1"
        required
    />
    <label for="newAuthor">Author</label>
    <input
        type="text"
        name="newAuthor"
        id="newAuthor"
        maxlength="100"
        minlength="1"
        required
    />
    <button type="submit">Post</button>
    <a href="/" class="formBack">Back</a>
</form>
